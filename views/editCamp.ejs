<% include partials/header %>
<div class="container">
<h1>
	EDIT <%=campground.name%>	
</h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
	<div class="form-group">
	<label>Name</label>
	<input type="text" class="form-control" value="<%=campground.name%>" name="campground[name]" placeholder="Name">
	<label>Price</label>
	<input type="number" class="form-control" name="campground[price]" value="<%=campground.price%>" placeholder="Price" min="50" step="50">
	<label>Image URL</label>
	<input type="text" class="form-control" value="<%=campground.image%>" name="campground[image]" placeholder="image url">
	<label>description</label>
	<input type="text" class="form-control" value="<%=campground.description%>"  name="campground[description]" placeholder="Add Some Details">
		
	</div>
	
	<button class="btn btn-lg btn-default">
		Submit
	</button>
	
<a href="/campgrounds/<%=campground._id%>">BACK</a>
</form>
</div>

<% include partials/footer %>
